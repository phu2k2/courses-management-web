  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "externalConsole": false,
      "pathMappings": {
        "/var/www/html": "${workspaceRoot}",
      },
      "xdebugSettings": {
        "max_data": 65535,
        "show_hidden": 1,
        "max_children": 100,
        "max_depth": 5
      },
      "ignore": [
        "**/vendor/**/*.php"
      ]
    }
  ]
}
